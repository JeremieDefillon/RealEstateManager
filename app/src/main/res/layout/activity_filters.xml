<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <!-- Toolbar -->
    <include
        android:id="@+id/app_actionbar"
        layout="@layout/app_actionbar" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dip"
        android:text="@string/set_filters_by"
        android:textColor="@color/colorSecondaryDark"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/line_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100">

        <android.support.v7.widget.CardView
            android:layout_margin="5dip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="35"
            android:gravity="center"
            card_view:cardCornerRadius="2dp"
            card_view:cardElevation="4dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/type_label"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:padding="2dip"
                    android:text="@string/type"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/value_title"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/type_value"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/colorWhite"
                    android:gravity="center"
                    android:padding="2dip"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <FrameLayout
                    android:id="@+id/add_type_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dip">

                    <ImageView
                        android:id="@+id/add_type_image"
                        android:layout_width="40dip"
                        android:layout_height="40dip"
                        android:layout_gravity="center"
                        android:background="@drawable/add_box"
                        android:contentDescription="@null"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:visibility="visible" />
                </FrameLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_margin="5dip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="35"
            android:gravity="center"
            card_view:cardCornerRadius="2dp"
            card_view:cardElevation="4dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/poi_label"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:padding="2dip"
                    android:text="@string/points_of_interest"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/value_title"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/poi_value"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/colorWhite"
                    android:gravity="center"
                    android:padding="2dip"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <FrameLayout
                    android:id="@+id/add_poi_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dip">

                    <ImageView
                        android:id="@+id/add_poi_image"
                        android:layout_width="40dip"
                        android:layout_height="40dip"
                        android:layout_gravity="center"
                        android:background="@drawable/add_box"
                        android:contentDescription="@null"
                        android:gravity="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:visibility="visible" />
                </FrameLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_margin="5dip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="30"
            android:gravity="center"
            android:orientation="horizontal"
            card_view:cardCornerRadius="2dp"
            card_view:cardElevation="4dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nb_rooms_label"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:padding="2dip"
                    android:text="@string/room_number"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/value_title"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/min_rooms_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:weightSum="100">

                    <TextView
                        android:id="@+id/min_rooms_lbl"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dip"
                        android:layout_weight="30"
                        android:text="@string/min_label"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="70"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/min_rooms_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dip"
                            android:layout_marginEnd="5dip"
                            android:gravity="center"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0.5dip"
                            android:layout_marginStart="5dip"
                            android:layout_marginEnd="5dip"
                            android:background="@color/colorGrey"
                            android:contentDescription="@null" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/max_rooms_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:weightSum="100">

                    <TextView
                        android:id="@+id/max_rooms_lbl"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dip"
                        android:layout_weight="30"
                        android:text="@string/max_label"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="70"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/max_rooms_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dip"
                            android:layout_marginEnd="5dip"
                            android:gravity="center"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0.5dip"
                            android:layout_marginStart="5dip"
                            android:layout_marginEnd="5dip"
                            android:background="@color/colorGrey"
                            android:contentDescription="@null" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
